<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>controllers.NotesListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteController</servlet-name>
        <servlet-class>controllers.deleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DuplicateController</servlet-name>
        <servlet-class>controllers.DuplicateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrashController</servlet-name>
        <servlet-class>controllers.TrashController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/RegistrationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteController</servlet-name>
        <url-pattern>/deleteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DuplicateController</servlet-name>
        <url-pattern>/DuplicateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrashController</servlet-name>
        <url-pattern>/TrashController</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>page.jsp</welcome-file>
    </welcome-file-list>
</web-app>